<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_github_user"
        android:src="@drawable/icon_github"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_item_name_github_user"
        android:text="@string/name"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_item_github_user"
        app:layout_constraintTop_toTopOf="@id/iv_item_github_user"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_github_user"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_f5"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_item_github_user"/>
</androidx.constraintlayout.widget.ConstraintLayout>